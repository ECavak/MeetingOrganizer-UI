@{
    ViewData["Title"] = "Meeting Create";
}

<form class="row g-6" method="post">
    <div class="col-md-12">
        <label for="inputEmail4" class="form-label">Subject</label>
        <input type="text" class="form-control" name="subject">
    </div>
    <div class="col-md-12">
        <label for="inputPassword4" class="form-label">Start Date</label>
        <input type="date" class="form-control" name="startDate">
    </div>
  
    <div class="col-md-6 ">
        <label for="inputPassword4" class="form-label">Start Time</label>
        <input type="time" class="form-control" name="startTime">
    </div>
    <div class="col-md-6 ">
        <label for="inputPassword4" class="form-label">End Time</label>
        <input type="time" class="form-control" name="endTime">
    </div>
    <div class="col-md-12">
        <label for="inputPassword4" class="form-label">Participants</label>
        <input type="text" class="form-control" name="participants">
    </div>

    <div class="col-12 mt-2">
        <button type="submit" class="btn btn-primary" asp-action="Create">Sign in</button>
    </div>
</form>
